<div class="pull-right" style="padding-top: 5px;">
  <%= link_to 'Edit', edit_task_path(@task), :class => 'btn btn-default' %>
</div>

<h3 style="color: #888; margin-top: 0.75em;">Status: <%= @task.completed_at.nil? ? 'Open' : 'Closed' %></h3>
<h1><%= @task.title %></h1>
<% if @task.project %>
<h2 class="page-header" style="color: #666;"><%= link_to @task.project.name, @task.project %></h2>
<% else %>
<h2 class="page-header" style="color: #ccc;">(Not assigned to a project)</h2>
<% end %>

<% if @task.gh_issue_number %>
  <% gh_url = 'https://github.com/' + @task.project.gh_repo_url_parse(:both) + '/issues/' + @task.gh_issue_number %>
  <div style="float: right;">
    <%= link_to image_tag("GitHub-Mark-120px-plus.png", width: 35, alt: "View on GitHub"), gh_url %>
  </div>
<% end %>

<p class="lead" style="margin-bottom: 5px; font-size: 1.5em;">
  Created by <%= (@task.creator and @task.creator.developer) ? link_to(@task.creator.developer.name, @task.creator.developer) : "no one" %>,
  assigned to <%= (@task.assignment and @task.assignment.developer_account) ? link_to(@task.assignment.developer_account.developer.name, @task.assignment.developer_account.developer) : "no one" %>.
</p>
<p class="lead" style="font-size: 1.0em;">
  <%= @task.priority.to_s.gsub(/_/, ' ').capitalize %>. <%= @task.due.nil? ? 'No due date' : "Due " + time_ago_in_words(@task.due) %>. <%= @task.completed_at.nil? ? 'Not completed yet' : "Completed " + time_ago_in_words(@task.completed_at) %>.
</p>


<div style="margin: 1em;">
  <%= simple_format(@task.details) %>
</div>
